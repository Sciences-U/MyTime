<div class="span4">
	<h3>Actions</h3>
	<dl>
		<hr>
		<dd><a href="{{ path('fos_user_profile_edit') }}">Editer</a></dd>
	</dl>
</div>
<div class="span10">
<form action="#" onsubmit="return false;">
	<fieldset>
    	<legend>Compte utilisateur</legend>
    	<div class="clearfix">
            <label>Nom d'utilisateur</label>
            <div class="input">
              <span class="uneditable-input">{{ user.username }}</span>
            </div>
        </div>
    	<div class="clearfix">
            <label>Email</label>
            <div class="input">
              <span class="uneditable-input">{{ user.email }}</span>
            </div>
        </div>
        <div class="clearfix">
            <label>Etat</label>
            <div class="input">
            {% if user.enabled %}
              <span class="uneditable-input">Actif</span>
            {% else %}
              <span class="uneditable-input">Inactif</span>
            {% endif %}
            </div>
        </div>
        <div class="clearfix">
            <label>Expiration</label>
            <div class="input">
            {% if user.expired %}
              <span class="uneditable-input">Expir&eacute;</span>
            {% elseif user.expiresAt is defined %}
              <span class="uneditable-input">expired</span>
            {% else %}
              <span class="uneditable-input">Jamais</span>
            {% endif %}
            </div>
        </div>
        <div class="clearfix">
        	<ul class="unstyled">
        	{% if user.lastLogin is defined %}
        		<li><i>Derni&egrave;re connexion : {{ user.lastLogin|date('d/m/Y H:i:s') }}</i></li>
        	{% else %}
        		<li><i>Derni&egrave;re connexion : auncune</i></li>
        	{% endif %}
        	</ul>
        </div>
   	</fieldset>
</form>
</div>
